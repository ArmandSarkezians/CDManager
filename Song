// This program  has an song object, and stores 5 variables related to the single song

package AssignmentFour;

public class Song {
    private String title;
    private String genre;
    private String artist;
    private int rating;
    private String time;

    //getters
    public String getTitle() {
        return title;
    }

    public String getGenre() { return genre; }

    public String getArtist() {
        return artist;
    }

    public int getRating() { return rating; }

    public String getTime() {
        return time;
    }

    //setters
    public void setTitle(String title) {
        this.title = title;
    }

    public void setGenre(String genre) {
        this.genre = genre;
    }

    public void setArtist(String artist) {
        this.artist = artist;
    }

    public void setRating(int rating) {
        this.rating = rating;
    }

    public void setTime(String time) {
        this.time = time;
    }

    // overrides
    public int compareTo (Song song1){ return 0; } // will eventually compare title

    public String toString (){
        return title + "\n" + genre + "\n" + artist + "\n" + rating + "\n" + time;
    }

    //constructor
    public Song(String t, String g, String a, int r, String tim) {
        title = t;
        genre = g;
        artist = a;
        rating = r;
        time = tim;
    }
}
